{% extends 'skeleton.twig' %}

{% block content %}
    <component is="app-layout">
        {% block sidebar %}
            <template slot="sidebar">
                {% if isAuthenticated %}
                    <component is="side-nav"
                            title="{{ TITLE }}"></component>
                {% endif %}
            </template>
        {% endblock %}

        <template slot="content">
            {% block app_content %}
            {% endblock %}
        </template>
    </component>
{% endblock %}
